;-------------------------------
;ポート#9の疑似入力 INP(9)
;IN	-
;OUT	A=%1X111111
;-------------------------------
JOY9:
	LD	A,%11101111		;B1 "X"
	CALL	READ_JOY

	LD	A,%11111111
	RET	C

	LD	A,%10111111
	RET

