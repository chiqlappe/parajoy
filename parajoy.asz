
;-------------------------------
;ジョイポートから入力データを取得する
;IN	A=ビットパターン 調べたいビットを0にする
;	MSB[-,-,B2,B1,R,L,D,U]LSB
;OUT	CY=押下状態 0:押された
;-------------------------------
READ_JOY:
	OUT	($10),A
	IN	A,($40)
	RRA				;CY<-押下状態
	RET


;-------------------------------
;ポート#0の疑似入力 INP(0)
;IN	-
;OUT	A=%1R1L1D11
;-------------------------------
JOY0:
	PUSH	DE
	LD	E,%11111111

	LD	A,%11111101		;DOWN "2"
	CALL	READ_JOY
	RR	E			;%D1111111
	RR	E			;%1D111111

	LD	A,%11111011		;LEFT "4"
	CALL	READ_JOY
	RR	E			;%L1D11111
	RR	E			;%1L1D1111

	LD	A,%11110111		;RIGHT "6"
	CALL	READ_JOY
	RR	E			;%R1L1D111
	RR	E			;%1R1L1D11

	LD	A,E

	POP	DE
	RET


;-------------------------------
;ポート#1の疑似入力 INP(1)
;IN	-
;OUT	A=%1111111U
;-------------------------------
JOY1:
	LD	A,%11111110		;UP "8"
	CALL	READ_JOY

	LD	A,%11111111
	RLA

	RET


;-------------------------------
;ポート#5の疑似入力 INP(5)
;IN	-
;OUT	A=%11111X1Z
;-------------------------------
JOY5:
	PUSH	DE
	LD	E,%11111111

	LD	A,%11101111		;B1 "X"
	CALL	READ_JOY
	RL	E
	RL	E			;%111111X1

	LD	A,%11011111		;B2 "Z"
	CALL	READ_JOY
	RL	E			;%11111X1Z

	LD	A,E

	POP	DE
	RET


;-------------------------------
;ポート#5の疑似入力 INP(5)
;IN	-
;OUT	A=%11111Z1X
;-------------------------------
if 0
